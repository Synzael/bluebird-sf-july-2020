<!--1.Action URL; 2.Method 3.Button value-->

<% if type == :new %>
    <% action_url = users_url %>
    <% button_text = "Sign Up" %>
<% else %>
    <% action_url = user_url(user) %>
    <% button_text = "Make better hooman" %>
<% end %>

<form action="<%= action_url %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% if type == :edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>
    <label id="username" for="username">Username:
        <input type="text" name="user[username]" value="<%= user.username %>">
    </label>
    <br>
    <label for="email">Email:
        <input type="text" name="user[email]" value="<%= user.email %>">
    </label>
    <br>
    <label for="age">Age:
        <input type="text" name="user[age]" value="<%= user.age %>">
    </label>
    <br>
    <label for="political_affiliation">Political Affiliation:
        <input type="text" name="user[political_affiliation]" value="<%= user.political_affiliation %>">
    </label>
    <label>Password
        <input type="password" name="user[password]" value="">
    </label>
    <br>
    <input type="submit" value="<%= button_text  %>">


</form>